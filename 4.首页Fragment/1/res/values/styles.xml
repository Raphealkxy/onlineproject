<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="rb_tab">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:button">@null</item>
    </style>
    
    <style name="text_title">
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
     
    </style>
    
    <style name="rb_redp">
        
        <item name="android:layout_height">13dp</item>
        <item name="android:layout_width">13dp</item>
        <item name="android:button">@null</item>
        <item name="android:clickable">false</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/slide_adv_selector</item>
    </style>
    
    
    <style name="bt_red_long">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button_long_selector</item>
    </style>
</resources>
